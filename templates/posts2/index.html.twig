{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Posts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Likes</th>
                <th>Foto</th>
                <th>Fecha_publicacion</th>
                <th>Contenido</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titulo }}</td>
                <td>{{ post.likes }}</td>
                <td>{{ post.foto }}</td>
                <td>{{ post.fechaPublicacion ? post.fechaPublicacion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.contenido }}</td>
                <td>
                    <a href="{{ path('app_posts2_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_posts2_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_posts2_new') }}">Create new</a>
{% endblock %}
