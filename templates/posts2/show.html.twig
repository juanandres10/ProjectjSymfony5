{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ post.titulo }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ post.likes }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ post.foto }}</td>
            </tr>
            <tr>
                <th>Fecha_publicacion</th>
                <td>{{ post.fechaPublicacion ? post.fechaPublicacion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ post.contenido }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_posts2_index') }}">back to list</a>

    <a href="{{ path('app_posts2_edit', {'id': post.id}) }}">edit</a>

    {{ include('posts2/_delete_form.html.twig') }}
{% endblock %}
